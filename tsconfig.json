{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "types": [
      "./types"
    ],
    "paths": {
      "decorators/*": [
        "decorators/*"
      ],
      "interceptors/*": [
        "interceptors/*"
      ],
      "app/*": [
        "app/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "database/*": [
        "database/*"
      ]
    }
  }
}